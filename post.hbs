{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
    the {body} of the default.hbs template, which contains our header/footer. }}

<main class="content" role="main">

    <article class="{{post_class}}">

        {{! Each post has the blog logo at the top, with a link back to the home page }}
        <header class="post-header">
            {{#if @blog.logo}}<a id="blog-logo" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="Blog Logo" /></a>{{/if}}
            <h1 class="blog-title">{{@blog.title}}</h1>
            <h2 class="blog-description">{{@blog.description}}</h2>
            
            <a href="/" class='btn' style="width: 182px;">Back to home</a><br/>
            <span class="largeIcons">
                <a href="http://www.twitter.com/GertjanLeemans" class="icon-twitter-sign"></a>
                <a href="http://www.linkedin.com/in/gertjanleemans" class="icon-linkedin-sign"></a>
                <a href="mailto:gertjan@digitalisma.com" class="icon-envelope"></a>
                <a href="skype:gertjan.digitalisma.com?call" class="icon-skype"></a>
                <a href="https://github.com/gertjanleemans" class="icon-github-sign"></a>
            </span>
        </header>

        {{! Everything inside the #post tags pulls data from the post }}
        {{#post}}

        {{! Everything below outputs content of the the post which has been published }}
        <span class="post-meta"><time datetime="{{date format="YYYY-MM-DD"}}">{{date format='DD MMM YYYY'}}</time> {{#if tags}}on {{tags separator=" | "}}{{/if}}</span>

        <h1 class="post-title">{{{title}}}</h1>

        <section class="post-content">
            {{content}}
        </section>
        
        <footer class="post-footer">
        
            <section class="share">
                <a class="icon-twitter-sign" href="http://twitter.com/share?text={{title}}&url={{url absolute="true"}}"
                    onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
                    <span class="hidden">Twitter</span>
                </a>
                <a class="icon-facebook-sign" href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}"
                    onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
                    <span class="hidden">Facebook</span>
                </a>
                <a class="icon-linkedin-sign" href="http://www.linkedin.com/shareArticle?url={{url absolute="true"}}"
                   onclick="window.open(this.href, 'linkedin-share', 'width=490,height=530');return false;">
                    <span class="hidden">LinkedIn</span>
                </a>
                <a class="icon-google-plus-sign" href="https://plus.google.com/share?url={{url absolute="true"}}"
                   onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;">
                    <span class="hidden">Google+</span>
                </a>
            </section>

        </footer>

        {{/post}}

    </article>

</main>
