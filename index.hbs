{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
    the {body} of the default.hbs template, which contains our header/footer. }}

{{! The big featured header on the homepage, with the site logo and description }}
<header id="site-head" {{#if @blog.cover}}style="background-image: url({{@blog.cover}})"{{/if}}>
    <div class="vertical">
        <div id="site-head-content" class="inner">

            {{#if @blog.logo}}<a id="blog-logo" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="Blog Logo" /></a>{{/if}}
            <h1 class="blog-title">{{@blog.title}}</h1>
            <h2 class="blog-description">{{@blog.description}}</h2>

            <a class='btn' href="http://beta.politkz.io">Try it!</a>
            <a class='btn last'>How much?</a><br>
            <span class="largeIcons">
                <a href="http://www.twitter.com/GertjanLeemans" class="icon-twitter-sign"></a>
                <a href="http://www.linkedin.com/in/gertjanleemans" class="icon-linkedin-sign"></a>
                <a href="mailto:gertjan@digitalisma.com" class="icon-envelope"></a>
                <a href="skype:gertjan.digitalisma.com?call" class="icon-skype"></a>
                <a href="https://github.com/gertjanleemans" class="icon-github-sign"></a>
            </span>
            <i id='header-arrow' class="icon-angle-down"></i>
        </div>
    </div>

</header>

{{! The main content area on the homepage }}
<main class="content" role="main">

    <div class='fixed-nav'>
    </div>

    {{! Each post will be output using this markup }}
    {{#foreach posts}}
    <div class='post-holder'>

            {{#if @first}}
                <article class="{{post_class}} first">
            {{else}}
                <article class="{{post_class}}">
            {{/if}}

            <header class="post-header">

                <h2 class="post-title">{{{title}}}</h2>

            </header>
            <section class="post-content">
                <p>{{content characters="9999999999999"}}</p>
            </section>

        </article>
        <div class='post-after'></div>
    </div>

    {{/foreach}}

    {{!! After all the posts, we have the previous/next pagination links }}

    <div class='post-holder'>
        <article class="post tag-about last">
            <header class="post-header">
                <h2 class="post-title">Pricing</h2>
            </header>
            <section class="post-content">
                <div class="plans">
                  <div class="plan">
                    <h3 class="plan-title">Free</h3>
                    <p class="plan-price">$0 <span class="plan-unit">per month</span></p>
                    <ul class="plan-features">
                      <li class="plan-feature plain">2 <span class="plan-feature-name">websites</span></li>
                      <li class="plan-feature plain">5<span class="plan-feature-unit">GB</span> <span class="plan-feature-name">storage</span></li>
                      <li class="plan-feature plain">3 <span class="plan-feature-name">users</span></li>
                    </ul>
                    <a href="#" class="plan-button">Choose Plan</a>
                  </div>
                  <div class="plan plan-highlight">
                    <p class="plan-recommended">Recommended</p>
                    <h3 class="plan-title">Bronze</h3>
                    <p class="plan-price">$35 <span class="plan-unit">per month</span></p>
                    <ul class="plan-features">
                      <li class="plan-feature plain">5 <span class="plan-feature-name">websites</span></li>
                      <li class="plan-feature plain">20<span class="plan-feature-unit">GB</span> <span class="plan-feature-name">storage</span></li>
                      <li class="plan-feature plain">10 <span class="plan-feature-name">users</span></li>
                    </ul>
                    <a href="#" class="plan-button">Choose Plan</a>
                  </div>
                  <div class="plan">
                    <h3 class="plan-title">Silver</h3>
                    <p class="plan-price">$75 <span class="plan-unit">per month</span></p>
                    <ul class="plan-features">
                      <li class="plan-feature plain">20 <span class="plan-feature-name">websites</span></li>
                      <li class="plan-feature plain">50<span class="plan-feature-unit">GB</span> <span class="plan-feature-name">storage</span></li>
                      <li class="plan-feature plain">25 <span class="plan-feature-name">users</span></li>
                    </ul>
                    <a href="#" class="plan-button">Choose Plan</a>
                  </div>
                  <div class="plan">
                    <h3 class="plan-title">Gold</h3>
                    <p class="plan-price">$110 <span class="plan-unit">per month</span></p>
                    <ul class="plan-features">
                      <li class="plan-feature plain">&infin; <span class="plan-feature-name">websites</span></li>
                      <li class="plan-feature plain">200<span class="plan-feature-unit">GB</span> <span class="plan-feature-name">storage</span></li>
                      <li class="plan-feature plain">&infin; <span class="plan-feature-name">users</span></li>
                    </ul>
                    <a href="#" class="plan-button">Choose Plan</a>
                  </div>
                </div>
            </section>
        </article>
        <div class='post-after'></div>
    </div>

    <div class='post-holder'>
        <article class="post tag-social tag-share tag-contact">
            <header class="post-header">
                <h2 class="post-title">Get in touch</h2>
            </header>
            <section class="post-content">
                <p>
                    <p>
                        If you'd like to connect with me, send me an invite on LinkedIn, drop me a tweet, send me a mail or contact me on any of the rest!
                    </p>

                    <p>
                        <center>
                            <span class="largeIcons">
                                <a href="http://www.twitter.com/GertjanLeemans" class="icon-twitter-sign"></a>
                                <a href="http://www.linkedin.com/in/gertjanleemans" class="icon-linkedin-sign"></a>
                                <a href="mailto:gertjan@digitalisma.com" class="icon-envelope"></a>
                                <a href="skype:gertjan.digitalisma.com?call" class="icon-skype"></a>
                                <a href="https://github.com/gertjanleemans" class="icon-github-sign"></a>
                            </span>
                        </center>
                    </p>
                </p>
            </section>
        </article>
        <div class='post-after'></div>
    </div>
</main>
